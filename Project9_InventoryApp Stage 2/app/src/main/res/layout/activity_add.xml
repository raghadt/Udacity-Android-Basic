<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.raghadtaleb.project8_inventoryapp.EditorsActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/items"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="4dp">

            <EditText
                android:id="@+id/edit_itemname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_itemname"
                android:inputType="textCapWords" />


            <EditText
                android:id="@+id/edit_suppname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_itemsupp" />

            <EditText
                android:id="@+id/edit_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/supp_phone"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/edit_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/supp_email"
                android:inputType="textCapWords" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/decPRICE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minus"
                    android:textColor="@color/colorAccent" />


                <EditText
                    android:id="@+id/edit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_price"
                    android:inputType="textCapWords" />

                <Button
                    android:id="@+id/incPRICE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plus"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/decQuant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/minus"
                    android:textColor="@color/colorAccent" />


                <EditText
                    android:id="@+id/edit_quant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_quant"
                    android:inputType="textCapWords" />

                <Button
                    android:id="@+id/incQuant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plus"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
