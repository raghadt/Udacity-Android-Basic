<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nachos_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/item_supp_descrption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supp" />

            <TextView
                android:id="@+id/item_quantity_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quant" />

            <TextView
                android:id="@+id/item_price_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_supp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

        <Button
            android:id="@+id/sell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="@string/sell"
            android:background="@color/colorAccent"
            />


    </LinearLayout>


</LinearLayout>
